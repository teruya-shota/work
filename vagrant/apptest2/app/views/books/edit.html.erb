<div class="body">
  <div class="container">
  <p id="notice"></p>
    <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>Editing Book</h1>

      <%= form_for @book do |f| %>
      <% if @book.errors.any? %>
        <div id="error_explanation">
        <h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
        <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
        </div>
      <% end %>

          <div class="field">
            <%= f.label :Title,%>
            <%= f.text_field :title, id: :book_title, class="col-xs-12"%>
          </div>

          <div class="field">
            <%= f.label :Opinion %>
            <%= f.text_area :body, id: :book_body, class="col-xs-12"%>
          </div>

          <div class="actions">
            <%= f.submit 'Update Book', class: "btn btn-primary col-xs-12"%>
          </div>
          <% end %>

          <%= link_to 'Edit', edit_book_path(@book) %> |
          <%= link_to 'Back', books_path %>
    </div>
    </div>
  </div>
</div>