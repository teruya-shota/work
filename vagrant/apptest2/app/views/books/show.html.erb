<div class="container">
    <p id="notice">Welcome! You have signed up successfully.<%= notice %></p>
    <div class="row">
            <div class="col-xs-3">
                <h2>User info</h2>
                <table class ="table">
                     <tr>
                         <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" , size:'100x100'%>
                     </tr>
                     <tr>
                         <th>name</th>
                         <th><%= @teruya.name %></th>
                     </tr>
                     <tr>
                         <th>introduction</th>
                         <th><%= @teruya.introduction %></th>
                     </tr>
                </table>
                     <a class="col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_path" href="/users/id/edit"></a>

                <h2>New book</h2>
                     <%= form_for(@book) do |f| %>
                        <% if @book.errors.any? %>
                             <div id="error_explanation">
                                   <h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
                                   <ul>
                                        <% @book.errors.full_messages.each do |message| %>
                                            <li><%= message %></li>
                                        <% end %>
                                    </ul>
                             </div>
                        <% end %>
                          <div class="field row">
                             <%= f.label :Title %>
                             <%= f.text_field :title %>
                          </div>
                          <div class="field row">
                             <%= f.label :Opinion %>
                             <%= f.text_area :body %>
                          </div>
                          <div class="actions">
                             <%= f.submit "Create Book", class: "btn btn-primary col-xs-12"%>
                          </div>
                     <% end %>
            </div>


                <div class="col-xs-9">
                     <h2>Book detail</h2>
                              <table class="table">
                                  <tbody>
                                     <% @book_path.each do |book| %>
                                       <tr>
                                            <th>
                                                 <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" , size:'50×50'%>
                                            </th>
                                            <td>
                                                <%= @teruya.name%>
                                            </td>
                                            <td><%= link_to user_path(user.id) do%>
                                                <%= @shota.title %>
                                            <%end%>
                                             </td>
                                            <td><%= @shota.body %></td>
                                            <td><%= link_to 'Edit', edit_book_path(book), class: "btn-sm btn-success" %></td>
                                            <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: '本当に消しますか?' }, class: "btn-sm btn-danger" %></td>
                                       </tr>
                                     <% end %>
                                  </tbody>
                              </table>
                </div>
      </div>
</div>
